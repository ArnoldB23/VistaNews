<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="96dp"
    android:layout_height="136dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/source_item_cardview"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="0dp"
        app:cardBackgroundColor="@color/colorPrimary">

        <ImageView
            android:id="@+id/source_item_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/source_item_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="gravity"
        android:ellipsize="end"
        android:padding="@dimen/source_item_side_margin_size"
        android:maxLines="2"

        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/source_item_cardview"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/source_item_cardview"
        android:layout_marginRight="4dp"
        app:layout_constraintRight_toRightOf="@+id/source_item_cardview"
        app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>

